<% include ./partials/header %>

<h1>
	HI
</h1>

<% blogs.forEach(function(blog){ %>
	<div>
		<h2><%=blog.title%></h2>
		<img src="<%=blog.image%>">
		<span><%=blog.created.toDateString()%></span>
		<p><% if(blog.body.length > 150){ %>
		<%= blog.body.substring(0, 150) %> . . .
		<% } else { %>
			<%= blog.body%>
		<% } %>
		</p>
		<a href="/blogs/<%= blog.id %>">Read More</a>
</div>
<% }) %>

<% include ./partials/footer %>


