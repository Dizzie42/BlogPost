<% include ./partials/header %>

<div class="ui main text container inverted segment">
	<div class="ui huge header inverted">Editing ... <%=blog.title%></div>
	<form id="delete" class="ui form inverted" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%=blog.title%>"</input>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%=blog.image%>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea required name="blog[body]"><%=blog.body%></textarea>
		</div>
		<input class="ui inverted blue big button" type="submit">
	</form>
	<a href="/blogs/<%=blog._id%>">
		<button class="delete ui red medium button">
			Discard
		</button>	
	</a>

</div>

<% include ./partials/footer %>
